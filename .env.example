# Spotify API credentials (https://developer.spotify.com/dashboard)
SPOTIFY_CLIENT_ID=your_client_id_here
SPOTIFY_CLIENT_SECRET=your_client_secret_here

# slskd configuration (https://github.com/slskd/slskd)
SLSKD_HOST=http://localhost:5030
SLSKD_API_KEY=your_slskd_api_key_here

# Path where slskd stores downloaded files
# Check your slskd config.yml for the downloads directory
SLSKD_DOWNLOAD_DIR=/path/to/slskd/downloads

# Output directory for organized downloads
DOWNLOAD_DIR=./downloads
